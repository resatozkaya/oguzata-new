rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Kullanıcı kimlik doğrulaması kontrolü
    function isAuthenticated() {
      return request.auth != null;
    }

    // Kullanıcının kendi dökümanlarına erişim kontrolü
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Kullanıcılar koleksiyonu için kurallar
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow write: if isOwner(userId);
    }

    // Mesajlar koleksiyonu için kurallar
    match /messages/{messageId} {
      allow read: if isAuthenticated() && (
        request.auth.uid in resource.data.participants ||
        request.auth.uid == resource.data.senderId ||
        request.auth.uid == resource.data.receiverId
      );
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() && (
        request.auth.uid in resource.data.participants ||
        request.auth.uid == resource.data.senderId ||
        request.auth.uid == resource.data.receiverId
      );
    }

    // Diğer koleksiyonlar için varsayılan kurallar
    match /{document=**} {
      allow read, write: if isAuthenticated();
    }
  }
}
